<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="LegendsRank.Views.MainPage">
    <ContentPage.Content>
        <ScrollView>
            <StackLayout 
            VerticalOptions="Center" 
            Padding="10"
            >
                <Image 
                Source="LogoApp.png" 
                WidthRequest="250"
                HeightRequest="250"
             />
                <Entry 
                x:Name="UserEntry"
                Placeholder="Find player by username" 
             />
 
                <Button 
                Text="Find" 
                TextColor="White"  
                BackgroundColor="Black" 
             />
            </StackLayout>
        </ScrollView>
    </ContentPage.Content>
</ContentPage>